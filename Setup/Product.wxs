<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi" xmlns:util = "http://schemas.microsoft.com/wix/UtilExtension">
  <Product Id="*" Name="XELS" Language="1033" Version="2.1.1.0" Manufacturer="Silicon Orchard" UpgradeCode="ad06b9ad-c74e-4d12-9b80-3aefd43d5d9f">
    <Package InstallerVersion="200" Compressed="yes" Platform="x64" InstallScope="perMachine" />
    <!--Jeo: Upgrade code for newer version which automatically replace previous version -->
    <!--Start-->
    <Upgrade Id="ad06b9ad-c74e-4d12-9b80-3aefd43d5d9f">
      <UpgradeVersion OnlyDetect="no" Property="PREVIOUSFOUND"
        Minimum="1.0.0.0" IncludeMinimum="yes"
        Maximum="99.0.0.0" IncludeMaximum="no" />
    </Upgrade>
    <InstallExecuteSequence>
      <RemoveExistingProducts After="InstallValidate" />
    </InstallExecuteSequence>
    <!--Finish-->
   
    <!--CommentOut below the AppDataFolder(1,2,3) commented part for closing "Deletion of XelsNode folder from AppDataFolder" -->
    
    <!--AppDataFolder(1): Add Property to Remove XelsNode folder from AppDataFolder-->
    <!--Start-->
    <!--Neo: UnComment Next 2 lines to clean up cahin data.-->
    <?define AppXelsFolder = "XelsNode" ?>
    <SetProperty Id="XELSFOLDER" Value="[AppDataFolder]$(var.AppXelsFolder)" After="CostFinalize" /> 
    <!--Finish-->
    
    <Property Id="WIXUI_INSTALLDIR" Value="APPLICATIONROOTDIRECTORY" />
    <UIRef Id="WixUI_InstallDir" />
    
    <!--<MajorUpgrade DowngradeErrorMessage="A newer version of Xels is already installed." />-->
    <MediaTemplate EmbedCab="yes" />

    <Feature Id="ProductFeature" Title="XELS" Level="1">
      <ComponentGroupRef Id="Xels_Project" />
      <ComponentRef Id="ApplicationShortcutDesktop" />
      <ComponentRef Id="ApplicationShortcutStartMenu" />

      <!--AppDataFolder(2): Add ComponentRef to Remove XelsNode folder from AppDataFolder-->
      <!--Start-->
      <!--Neo: UnComment Next 1 line to clean up cahin data.-->
      <ComponentRef Id="XelsFolderCleanup" />
      <!--Finish-->
      
    </Feature>
  </Product>

  <Fragment>
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFiles64Folder">
        <Directory Id="APPLICATIONROOTDIRECTORY" Name="XELS" />
      </Directory>
      <Directory Id="ProgramMenuFolder">
        <Directory Id="ApplicationProgramsFolder" Name="XELS"/>
      </Directory>
      <Directory Id="DesktopFolder" SourceName="Desktop" />

      <!-- AppDataFolder(3): Remove XelsNode folder from AppDataFolder  -->
      <!--Start-->
      <!--Neo: UnComment Next 3 lines to clean up cahin data.-->
      <Component Id="XelsFolderCleanup" Guid="63127A7D-42F9-4A61-B661-A8ABCC3A7FE1">
        <util:RemoveFolderEx On="install" Property="XELSFOLDER"/>
      </Component>
      <!--Finish-->
      
    </Directory>

    <DirectoryRef Id="DesktopFolder">
      <Component Id="ApplicationShortcutDesktop" Guid="{501069CB-F127-4087-9887-EC2FEED638A2}" Win64='yes'>
        <!-- Neo: The Target attribute is important here.. This is the ID of the exe file. search for "filE0949A33ABC424E47D589039C62AFF47" in Xels.XelsD.wxs file -->
        <Shortcut Id="ApplicationDesktopShortcut" Name="XELS" Description="XELS Decentralized Ecological Economy Platform" Target="[#filE0949A33ABC424E47D589039C62AFF47]" WorkingDirectory="APPLICATIONROOTDIRECTORY"/>
        <RemoveFolder Id="RemoveFolder" Directory="DesktopFolder" On="uninstall"/>
        <RegistryValue Root="HKCU" Key="Software\Microsoft\XELS" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
      </Component>
    </DirectoryRef>
    
    <DirectoryRef Id="ApplicationProgramsFolder">
      <Component Id="ApplicationShortcutStartMenu" Guid="{DCAC770B-0257-4D6C-AF97-6F8727C0556D}" Win64='yes'>
        <Shortcut Id="ApplicationStartMenuShortcut" Name="XELS" Description="XELS Decentralized Ecological Economy Platform" Target="[#filE0949A33ABC424E47D589039C62AFF47]" WorkingDirectory="APPLICATIONROOTDIRECTORY"/>
        <RemoveFolder Id="ApplicationProgramsFolder" Directory="ApplicationProgramsFolder" On="uninstall"/>
        <RegistryValue Root="HKCU" Key="Software\Microsoft\XELS" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
      </Component>
    </DirectoryRef>

  </Fragment>

  <Fragment>
    <ComponentGroup Id="ProductComponents" Directory="APPLICATIONROOTDIRECTORY">
    </ComponentGroup>
  </Fragment>
</Wix>
